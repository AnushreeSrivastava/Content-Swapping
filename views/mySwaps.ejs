<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Furniswap</title>
  <link rel="stylesheet" href="/assets/styles.css">
  <link rel="stylesheet" href="/assets/font-awesome-4.7.0/css/font-awesome.min.css">
</head>
<body>
  <% include partials/header.ejs %>
  <% include partials/user-navigation.ejs %>
  <div id="container">
    <% include partials/site-navigation.ejs %>
    <main id="main">
     <div id="divBreadcrumb">
      <ul class="breadcrumb">
        <li class="li-home"><a href="/home">Home</a></li>
        <li>My Swaps</li>
      </ul>
    </div> 
    <section id="mySwapSection">
      <h3><%= currentProfile.firstName %>'s Swap Offers</h3>
      <table> 
        <tr>
          <th>My Item(s)</th>
          <th>Swap Offer(s)</th>
          <th></th>
        </tr>
        <%  for(var i=0; i< swapTable.length; i+=6) {%>
        <tr>
          <td><a class="a-title" href="/item?theItem=<%= swapTable[i] %>"><%= swapTable[i+1] %></a></td>
          <td><a class="a-title" href="/item?theItem=<%= swapTable[i+2] %>"><%= swapTable[i+3] %></a></td>              
          <%   if(swapTable[i+4] === "1"){ %>
          <td>
            <a class="btn btn-mySwaps" href="/myItems?theItem=<%= swapTable[i] %>&offerItem=<%= swapTable[i+2] %>&offerID=<%= swapTable[i+5] %>&action=withdraw">Withdraw Swap</a> 
          </td>   
          <% }else{ %>
          <td>
            <a class="btn-mySwaps btn" href="/myItems?theItem=<%= swapTable[i] %>&offerItem=<%= swapTable[i+2] %>&offerID=<%= swapTable[i+5] %>&action=accept">Accept</a>
            <a class="btn-mySwaps btn" href="/myItems?theItem=<%= swapTable[i] %>&offerItem=<%= swapTable[i+2] %>&offerID=<%= swapTable[i+5] %>&action=reject">Reject</a>
          </td>   
          <% } %>            
        </tr>
        <% } %> 
      </table> 
    </section>
  </main>    
  <br>
  <% include partials/footer.ejs %> 
</div>

</body>
</html>
